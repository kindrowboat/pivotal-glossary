{
  "name": "PEDANT",
  "version": "0.1",
  "description": "Glosses pages with definitions of acronyms",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["glossPage.js"]
    }
  ],
  "manifest_version": 2
}
