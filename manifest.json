{
  "name": "Pivotal Glossary",
  "version": "0.2",
  "description": "Glosses pages with definitions of acronyms",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://inbox.google.com/*",
        "https://mail.google.com/*",
        "https://github.com/*",
        "https://*.slack.com/*",
        "file://*"
      ],
      "js": ["glossPage.js"],
      "css": ["annotation.css"]
    }
  ],
  "manifest_version": 2
}
